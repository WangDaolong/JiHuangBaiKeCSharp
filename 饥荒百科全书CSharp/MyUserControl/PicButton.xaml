<UserControl x:Class="饥荒百科全书CSharp.MyUserControl.PicButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:饥荒百科全书CSharp.MyUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <StackPanel Orientation="Horizontal">
        <Button x:Name="PictureButton" Click="Button_Click" Height="35" Width="35" Cursor="{StaticResource CursorLink}" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Top">
            <Image x:Name="PictureButtonImage" Height="32" Width="32" Margin="-10,-6"/>
        </Button>
        <TextBlock x:Name="PictureButtonTextBlock" FontSize="15" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
