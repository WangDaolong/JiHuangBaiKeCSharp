<UserControl x:Class="饥荒百科全书CSharp.MyUserControl.ButtonWithPicture"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:饥荒百科全书CSharp.MyUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="35">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Dictionary/CursorDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Button x:Name="UCButton" HorizontalAlignment="Left" VerticalAlignment="Top" Cursor="{DynamicResource CursorLink}" Width="35" Height="35" Focusable="False" Background="{x:Null}" BorderBrush="{x:Null}">
        <Image x:Name="UCImage" Width="32" Height="32" Margin="-1,-1,0,0"/>
    </Button>
</UserControl>
