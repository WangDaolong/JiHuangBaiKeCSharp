<UserControl x:Class="饥荒百科全书CSharp.MyUserControl.BarChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:饥荒百科全书CSharp.MyUserControl"
             mc:Ignorable="d"
             d:DesignHeight="15" d:DesignWidth="310">

    <Grid x:Name="RootGrid" Height="15" Margin="0,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="LabelColumnDefinition" Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="LabelTextBlock" VerticalAlignment="Center" TextAlignment="Left" HorizontalAlignment="Left"/>
        <Rectangle Grid.Column="1" x:Name="ValueRectangle" Fill="#FFF4F4F5" Height="15" MinWidth="32" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="2" x:Name="ValueTextBlock" FontSize="12" TextWrapping="Wrap" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,0,0"/>
    </Grid>
</UserControl>
