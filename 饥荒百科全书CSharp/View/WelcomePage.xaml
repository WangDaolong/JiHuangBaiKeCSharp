<Page x:Class="饥荒百科全书CSharp.View.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:饥荒百科全书CSharp.View"
      mc:Ignorable="d" 
      d:DesignHeight="660" d:DesignWidth="956"
      Title="WelcomePage">

    <Grid x:Name="RightGridWelcome">
        <TextBlock Text="饥荒百科全书" VerticalAlignment="Top" Margin="0,10,40,0" Foreground="Black" FontSize="53.333" FontWeight="Bold" d:LayoutOverrides="VerticalAlignment" HorizontalAlignment="Right" d:IsLocked="True"/>
        <TextBlock Text="对应游戏版本：" VerticalAlignment="Top" Margin="0,82.733,40,0" Foreground="Black" FontSize="26.667" FontWeight="Bold" HorizontalAlignment="Right" d:LayoutOverrides="VerticalAlignment" d:IsLocked="True"/>
        <TextBlock Text="单机版：v246924" VerticalAlignment="Top" Margin="0,121.599,40,0" Foreground="Black" FontSize="26.667" FontWeight="Bold" HorizontalAlignment="Right" d:LayoutOverrides="VerticalAlignment"/>
        <TextBlock Text="联机版：v248955" VerticalAlignment="Top" Margin="0,160.465,40,0" Foreground="Black" FontSize="26.667" FontWeight="Bold" HorizontalAlignment="Right" d:LayoutOverrides="VerticalAlignment"/>
        <TextBlock Text="部分资料来源于wikia" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,225,40,0" Foreground="Black" FontSize="33.333" FontWeight="Bold" d:LayoutOverrides="VerticalAlignment" d:IsLocked="True"/>
        <TextBlock Text="作者: tpxxn" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,40,235" Foreground="Black" FontSize="40" FontWeight="Bold"/>
        <Button x:Name="WButtonQrCodeQun" Focusable="False" Width="150" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Right" Margin="0,0,37,62" Height="150" VerticalAlignment="Bottom" Click="W_button_QRCode_Qun_Click" Cursor="{DynamicResource CursorLink}">
            <Image Source="/Resources/Pic/QRCode_Qun.png" Width="150" Height="150"/>
        </Button>
        <StackPanel Margin="10,0,0,52" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Button x:Name="WButtonOfficialWebsite" Focusable="False" Margin="0" Foreground="Blue" BorderBrush="{x:Null}" Background="{x:Null}" Click="W_button_official_website_Click" Cursor="{DynamicResource CursorLink}" FontSize="16" HorizontalAlignment="Left">
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="百科官网" VerticalAlignment="Top" TextDecorations="Underline"/>
            </Button>
            <Button x:Name="WButtonJiHuangHeZi" Focusable="False" Margin="0" Foreground="Blue" BorderBrush="{x:Null}" Background="{x:Null}" Click="W_button_jihuanghezi_Click" Cursor="{DynamicResource CursorLink}" FontSize="16" HorizontalAlignment="Left">
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="饥荒盒子 by 火叶" VerticalAlignment="Top" TextDecorations="Underline"/>
            </Button>
            <Button x:Name="WButtonMods" Focusable="False" Margin="0" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Blue" Click="W_button_Mods_Click" Cursor="{DynamicResource CursorLink}" FontSize="16" HorizontalAlignment="Left">
                <TextBlock TextWrapping="Wrap" Text="推荐Mod(联机版)" VerticalAlignment="Top" TextDecorations="Underline" HorizontalAlignment="Left"/>
            </Button>
            <Button x:Name="WButtonDsNews" Focusable="False" Margin="0" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Blue" Click="W_button_DSNews_Click" Cursor="{DynamicResource CursorLink}" FontSize="16" HorizontalAlignment="Left">
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="饥荒单机版更新" VerticalAlignment="Top" TextDecorations="Underline"/>
            </Button>
            <Button x:Name="WButtonDstNewS" Focusable="False" Margin="0" Foreground="Blue" BorderBrush="{x:Null}" Background="{x:Null}" Click="W_button_DSTNewS_Click" Cursor="{DynamicResource CursorLink}" FontSize="16" HorizontalAlignment="Left">
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="饥荒联机版更新" VerticalAlignment="Top" TextDecorations="Underline"/>
            </Button>
            <Button x:Name="WButtonSteamCommunity" Focusable="False" Margin="0" Foreground="Blue" BorderBrush="{x:Null}" Background="{x:Null}" Click="W_button_SteamCommunity_Click" Cursor="{DynamicResource CursorLink}" FontSize="16" HorizontalAlignment="Left">
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="暂时解决创意工坊无法访问等Steam连接问题的软件" VerticalAlignment="Top" TextDecorations="Underline"/>
            </Button>
        </StackPanel>
        <TextBlock x:Name="TipTextBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="注: DS-饥荒单机 | RoG-巨兽统治 | SW-失落之船 | DST-饥荒联机 | Tencent-WeGame版和QQ游戏大厅版" VerticalAlignment="Bottom" Margin="10,0,0,10" FontSize="16"/>
    </Grid>
</Page>
