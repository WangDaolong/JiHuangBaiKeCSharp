<Page x:Class="饥荒百科全书CSharp.View.SettingChildPage.SettingChildPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:饥荒百科全书CSharp.View.SettingChildPage"
      mc:Ignorable="d" 
      d:DesignHeight="660" d:DesignWidth="888"
      Title="SettingChildPage">

    <ScrollViewer x:Name="RootScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Template="{StaticResource MyScrollViewer}">
        <StackPanel Orientation="Vertical" Margin="10">
            <!--老板键-->
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="SeBossKeyTitle" HorizontalAlignment="Left" TextWrapping="Wrap" Text="老板键" VerticalAlignment="Center"/>
                <Button x:Name="SeBossKeyKey" Content="Ctrl + Alt + B" HorizontalAlignment="Left" VerticalAlignment="Top" Width="141" KeyDown="Se_BossKey_Key_KeyDown" IsEnabled="False" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
